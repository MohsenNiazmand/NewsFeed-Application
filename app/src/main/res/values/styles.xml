<?xml version="1.0" encoding="utf-8"?>
<resources>



    <style name="ActiveItemBottomNavigationTextAppearance" parent="TextAppearance.MyTheme.Caption">
        <item name="fontFamily">@font/opensans_extrabold</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>

    <style name="Theme.News.AuthTheme.Button" parent="Theme.News.AuthTheme">
        <item name="backgroundTint">?colorOnBackground</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
    </style>



    <style name="ProfileLinks">
        <item name="android:minHeight">46dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:textAppearance">?textAppearanceBody1</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Avatar">
        <item name="cornerSize">50%</item>
    </style>
</resources>